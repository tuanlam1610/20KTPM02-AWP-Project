{
    "version": 2,
    "builds": [
      {
        "src": "backend/src/main.ts",
        "use": "@vercel/node"
      }
    ],
    "routes": [
      {
        "src": "backend/(.*)",
        "dest": "backend/src/main.ts",
        "methods": ["GET", "POST", "PUT", "DELETE"]
      }
    ],
    "hooks": {
      "postbuild": "npx prisma migrate deploy"
    }
  }
  